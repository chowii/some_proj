    </style>

    <style name="TextView.Message.Small.Center.HyperLink">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextView.Message.Large.Start.LightWhite">
        <item name="android:textColor">@color/whiteLight</item>
    </style>

    <!--MARK: - ================== MarketPlace TextView Styles ======-->

    <style name="PropertyTitle" parent="TextView.Header.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PropertyAddress" parent="TextView.SubTitle.Grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="PropertyDetails" parent="TextView.SubTitle.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!--MARK: - ================== Filter TextView Styles ======-->

    <style name="FilterPropertyHeader" parent="TextView.SubTitle.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/greyLightPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="FilterPropertyRegular" parent="TextView.SubTitle.Center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackDarkPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="FilterPropertyRegular.NoBackground" parent="TextView.SubTitle.Center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackDarkPrimary</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="FilterPropertyRegular.Left">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="FilterCheckboxItem" parent="TextView.Message.Small.Start.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!--MARK: - ================== CustomView Styles ==================-->

    <style name="CustomView" />

    <style name="CustomView.SocialLoginImageView" parent="CustomView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">13dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!--MARK: - ================== EditText Styles ==================-->

    <style name="EditText">
        <item name="fontPath">fonts/Gibson-Light.ttf</item>
    </style>

    <style name="EditText.RegisterTheme">
        <item name="colorControlNormal">@color/whitePrimary</item>
        <item name="colorControlActivated">@color/whitePrimary</item>
        <item name="colorControlHighlight">@color/whitePrimary</item>
    </style>

    <style name="EditText.RegisterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/whitePrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <!--MARK: - ================== Check box Styles ==================-->
    <style name="Checkbox" parent="AppTheme">
        <item name="fontPath">fonts/Gibson-Light.ttf</item>
    </style>

    <style name="Checkbox.Theme" parent="AppTheme">
        <item name="colorControlNormal">@color/whiteLight</item>
        <item name="colorControlActivated">@color/whiteLight</item>
    </style>

    <style name="Checkbox.Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
