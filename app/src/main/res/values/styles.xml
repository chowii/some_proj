<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>

        <!--A BIT OF MATERIAL DESIGN-->
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true
        </item>

        <!--******Zendesk Attributes start******-->
        <!-- Conversations drawable icon in SupportActivity -->
        <item name="helpConversationsIcon">@drawable/help_conversations_icon_dark</item>

        <!-- Send and attach icons in ContactZendeskActivity -->
        <item name="contactAttachmentIcon">@drawable/contact_attachment_icon_dark</item>
        <item name="contactSendIcon">@drawable/contact_send_icon_selector_dark</item>

        <!-- Send and attach icons in ViewRequestActivity -->
        <item name="viewRequestSendIcon">@drawable/view_request_send_icon_selector_dark</item>
        <item name="viewRequestAttachmentIcon">@drawable/view_request_attachment_icon_dark</item>

        <!-- New request icon in RequestActivity -->
        <item name="requestListAddIcon">@drawable/request_list_add_icon_dark</item>
        <!--******Zendesk Attributes end******-->
    </style>

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.Base.SwitchCompat" parent="AppTheme">
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/greyLightPrimary</item>

        <!-- inactive track color (30% transparency automatically added) -->
        <item name="android:colorForeground">@color/greyDarkPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Toolbar.ShadowedBack">
        <item name="navigationIcon">@drawable/arrow_back_white</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/whiteSemitransparent</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--MARK: - ================== Text Styles ==================-->

    <style name="Text">
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="Text.WhiteWithShadow">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Thin">
        <item name="fontPath">fonts/Gibson-Thin.ttf</item>
        <item name="colorControlNormal">#c5c5c5</item>
    </style>

    <style name="Text.Med">
        <item name="fontPath">fonts/Gibson-Medium.ttf</item>
    </style>

    <style name="Text.Bold">
        <item name="fontPath">fonts/Gibson-Bold.ttf</item>
    </style>

    <style name="Text.Bold.RedHeader">
        <item name="android:textColor">@color/redPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--MARK: - ================== Button Styles ==================-->

    <style name="Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <!--This line is commented because buttons text is not in a center for older Android-->
        <!--<item name="android:lineSpacingMultiplier">1.5</item>-->
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Green.Bold">
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorAccent">@color/primary</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="MaterialButton.Green">
        <item name="android:background">@drawable/green_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CircularButton.Green" parent="ThemeOverlay.AppCompat.Dark">
        <!-- customize colorButtonNormal for the disable color -->
        <!-- customize colorAccent for the enabled color -->
        <item name="colorAccent">@color/white</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="Button.UserAuth" parent="Button.Green.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MaterialButton.BorderWhiteButton">
        <item name="android:background">@drawable/border_white_button</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="fontPath">fonts/Gibson-Light.ttf</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@color/greyDarkPrimary</item>
        <item name="colorButtonNormal">@color/white</item>
    </style>


    <style name="CircleWhiteButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/white</item><!--enabled-->
        <item name="colorButtonNormal">@color/greyLightPrimary</item><!--disabled-->
    </style>

    <!--MARK: - ================== Button Styles ====================-->

    <style name="FilterButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/ring_grey</item>
    </style>

    <!--MARK: - ================== TextView Styles ==================-->

    <style name="TextView" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--MARK: - ================== Base TextView Styles =============-->

    <style name="TextView.Header">
        <item name="fontPath">fonts/Gibson-Bold.ttf</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Title">
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.SubTitle">
        <item name="fontPath">fonts/Gibson-Thin.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextView.SocialLoginText" parent="TextView.Title.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">13dp</item>
    </style>

    <style name="ListTextHeader">
        <item name="fontPath">fonts/Gibson-Bold.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/hintText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <!--MARK: - ================== Bold TextView Styles =============-->

    <style name="TextView.Header.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.SubTitle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--MARK: - ================== Center TextView Styles ===========-->

    <style name="TextView.Header.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
