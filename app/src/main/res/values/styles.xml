<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    // MARK: - ================== Text Styles ==================

    <style name="Text" >
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Small.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Thin" >
        <item name="fontPath">fonts/Gibson-Thin.ttf</item>
        <item name="colorControlNormal">#c5c5c5</item>
    </style>

    <style name="Text.Med" >
        <item name="fontPath">fonts/Gibson-Medium.ttf</item>
    </style>

    <style name="Text.Bold" >
        <item name="fontPath">fonts/Gibson-Bold.ttf</item>
    </style>

    <style name="Text.Bold.RedHeader">
        <item name="android:textColor">@color/redPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18dp</item>
    </style>


    // MARK: - ================== Button Styles ==================

    <style name="Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Green.Bold">
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.UserAuth" parent="Button.Green.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    // MARK: - ================== TextView Styles ==================

    <style name="TextView" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Title">
        <item name="fontPath">fonts/Gibson-Regular.ttf</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextView.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.SocialLoginText" parent="TextView.Title.Bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">13dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="TextView.Header">
        <item name="fontPath">fonts/Gibson-Bold.ttf</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextView.Header.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Title.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.SubTitle">
        <item name="fontPath">fonts/Gibson-Thin.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextView.SubTitle.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Header.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Title.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Header.PrimaryWhite">
        <item name="android:textColor">@color/whitePrimary</item>
    </style>

    <style name="TextView.Title.PrimaryWhite">
        <item name="android:textColor">@color/whitePrimary</item>
    </style>

    <style name="TextView.Header.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Title.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.SubTitle.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.SubTitle.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Header.Center.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Title.Center.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.Header.Center.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Title.Center.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.SubTitle.Center.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.SubTitle.Center.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Message.Large" parent="TextView.SubTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Message.Small" parent="TextView.SubTitle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextView.Message.Large.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Message.Large.Start">
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView.Message.Small.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Message.Large.Center.HyperLink">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Message.Large.Center.Dark" >
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Message.Small.Center.Dark">
        <item name="android:textColor">@color/blackLightPrimary</item>
    </style>

    <style name="TextView.Message.Small.Center.HyperLink">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextView.Message.Large.Start.LightWhite">
        <item name="android:textColor">@color/whiteLight</item>
    </style>


    // MARK: - ================== CustomView Styles ==================

    <style name="CustomView"></style>

    <style name="CustomView.SocialLoginImageView" parent="CustomView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">13dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    // MARK: - ================== EditText Styles ==================

    <style name="EditText">
        <item name="fontPath">fonts/Gibson-Light.ttf</item>
    </style>

    <style name="EditText.RegisterTheme">
        <item name="colorControlNormal">@color/whitePrimary</item>
        <item name="colorControlActivated">@color/whitePrimary</item>
        <item name="colorControlHighlight">@color/whitePrimary</item>
    </style>

    <style name="EditText.RegisterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/whitePrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    // MARK: - ================== EditText Styles ==================

    <style name="Checkbox" parent="AppTheme">
        <item name="fontPath">fonts/Gibson-Light.ttf</item>
    </style>


    <style name="Checkbox.Theme" parent="AppTheme">
        <item name="colorControlNormal">@color/whiteLight</item>
        <item name="colorControlActivated">@color/whiteLight</item>
    </style>

    <style name="Checkbox.Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">-5dp</item>
    </style>



</resources>
