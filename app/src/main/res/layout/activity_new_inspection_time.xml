<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="@string/inspection_time_add_new"
        app:titleTextColor="@color/white"/>

    <TextView
        android:id="@+id/header"
        style="@style/ListTextHeader"
        android:text="@string/inspection_time_set_date"/>

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/inspection_time_date"
            android:textColor="@color/primaryText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/dateDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            tools:text="@string/test_text_short"/>
    </LinearLayout>

    <include layout="@layout/horizontal_rule"/>

    <LinearLayout
        android:id="@+id/startTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/inspection_time_start_time"
            android:textColor="@color/primaryText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/startTimeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            tools:text="@string/test_text_short"/>
    </LinearLayout>

    <include layout="@layout/horizontal_rule"/>

    <LinearLayout
        android:id="@+id/endTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/inspection_time_end_time"
            android:textColor="@color/primaryText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/endTimeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="14sp"
            tools:text="@string/test_text_short"/>
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/inspection_time_save"
        android:textAllCaps="true"
        android:theme="@style/MaterialButton.Green"/>
</LinearLayout>