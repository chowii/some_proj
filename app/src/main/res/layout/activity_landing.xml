<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/building_facade"
    >

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/the_property_network_for_everyone"
        style="@style/TextView.SubTitle.Dark"
        android:layout_marginTop="30dp"
        android:textColor="@color/blackDarkPrimary"
        android:drawableTop="@drawable/soho_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blueFacebookLogin"
            >

            <ImageView
                style="@style/CustomView.SocialLoginImageView"
                />

            <TextView
                android:text="@string/login_with_facebook"
                style="@style/TextView.SocialLoginText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/redGooglePlusLogin"
            >

            <ImageView
                style="@style/CustomView.SocialLoginImageView"
                />

            <TextView
                android:text="@string/login_with_google"
                android:textStyle="bold"
                style="@style/TextView.SocialLoginText"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_social_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/signup"
                style="@style/Button.UserAuth"
                android:text="@string/sign_up"
                />

            <Button
                android:id="@+id/login"
                style="@style/Button.UserAuth"
                android:text="@string/login"
                />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>