<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/blueFacebookLogin"
            >

            <ImageView
                style="@style/CustomView.SocialLoginImageView"
                android:src="@drawable/com_facebook_button_icon_white"
                />

            <TextView
                android:text="LOGIN WITH FACEBOOK"
                style="@style/TextView.SocialLoginText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/redGooglePlusLogin"
            >

            <ImageView
                android:src="@drawable/com_facebook_button_icon_white"
                style="@style/CustomView.SocialLoginImageView"
                />

            <TextView
                android:text="LOGIN WITH GOOGLE+"
                android:textStyle="bold"
                style="@style/TextView.SocialLoginText"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_social_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:id="@+id/signup"
                style="@style/Button.UserAuth"
                android:text="S I G N  U P"
                />

            <Button
                android:id="@+id/login"
                style="@style/Button.UserAuth"
                android:text="L O G  I N"
                />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>