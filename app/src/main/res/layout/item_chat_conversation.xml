<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/message_start_text_view"
            style="@style/Button.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="10dp"
            android:textStyle="normal"
            tools:text="@string/chat_conversation_placeholder_text" />

        <TextView
            android:id="@+id/message_stamp_start_text_view"
            style="@style/TextView.SubTitle.Grey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_margin="5dp"
            android:textSize="10sp"
            tools:text="@string/chat_conversation_placeholder_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/message_stamp_end_text_view"
            style="@style/TextView.SubTitle.Grey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_margin="5dp"
            android:textSize="10sp"
            tools:text="@string/chat_conversation_placeholder_text" />

        <TextView
            android:id="@+id/message_end_text_view"
            style="@style/Button.Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="10dp"
            tools:text="@string/chat_conversation_placeholder_text" />

    </LinearLayout>

</FrameLayout>