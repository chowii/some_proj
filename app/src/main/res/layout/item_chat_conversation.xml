<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/message_start_text_view"
                style="@style/ChatMessage.Receive"
                tools:text="@string/chat_conversation_placeholder_text" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/message_stamp_start_text_view"
            style="@style/ChatMessage.Stamp"
            tools:ignore="SmallSp"
            tools:text="@string/chat_conversation_placeholder_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_stamp_end_text_view"
            style="@style/ChatMessage.Stamp"
            tools:ignore="SmallSp"
            tools:text="@string/chat_conversation_placeholder_text" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/message_end_text_view"
                style="@style/ChatMessage.Send"
                tools:text="@string/chat_conversation_placeholder_text" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>