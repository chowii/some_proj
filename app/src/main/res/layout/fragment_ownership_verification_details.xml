<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightBackground"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/verification_ownership_details_description"
        android:textColor="@color/primaryText"
        android:textSize="14sp"/>

    <TextView
        style="@style/ListTextHeader"
        android:layout_marginTop="24dp"
        android:text="@string/verification_ownership_details_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:lineSpacingExtra="4dp"
        android:padding="14dp"
        android:text="@string/verification_ownership_details_documents"
        android:textColor="@color/primaryText"
        android:textSize="16sp"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/attach_files"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/verification_ownership_attach_files"
        android:textAllCaps="true"/>
</LinearLayout>