<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soho.sohoapp.feature.landing.signup.SignUpActivity"
    android:background="@drawable/register_email_account"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/soho_logo_white"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="35dp"
            />

        <EditText
            android:id="@+id/register_email_edit_text"
            android:hint="@string/your_email"
            android:drawableEnd="@drawable/email"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"
            style="@style/EditText.RegisterStyle"
            android:theme="@style/EditText.RegisterTheme"
            />

        <EditText
            android:id="@+id/register_password_edit_text"
            android:drawableEnd="@drawable/password"
            android:hint="@string/password"
            android:inputType="textPassword"
            style="@style/EditText.RegisterStyle"
            android:theme="@style/EditText.RegisterTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            style="@style/TextView.Message.Large.Center"
            android:text="@string/register_agreement_message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            style="@style/TextView.Message.Small.Center.HyperLink"
            android:text="@string/register_terms_of_condition"
            />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/Button.Green"
            android:text="@string/register_button"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/already_have_an_account"
            style="@style/TextView.Message.Large.Center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/sign_in_here"
            style="@style/TextView.Message.Small.Center.HyperLink"
            />


    </LinearLayout>

</FrameLayout>
