<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/image_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitePrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView.Title.Dark"
            android:textSize="24sp"
            android:paddingBottom="10dp"
            android:text="12341323"

            />

        <TextView
            android:id="@+id/street_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingBottom="10dp"
            android:text="12341323"

            />

        <TextView
            android:id="@+id/suburb_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="12341323"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bedroom_text_view"
                android:paddingRight="15dp"
                android:drawablePadding="5dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/bed"
                />

            <TextView
                android:id="@+id/bathroom_text_view"
                android:paddingRight="15dp"
                android:drawablePadding="5dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/shower"
                />

            <TextView
                android:id="@+id/parking_text_view"
                android:paddingRight="15dp"
                android:drawablePadding="5dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/car"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>