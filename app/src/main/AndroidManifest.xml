<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soho.sohoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:name=".SohoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_soho"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--windowSoftInputMode is required here to close keyboard after exit from AddProperty screen-->
        <activity
            android:name=".feature.home.HomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".feature.landing.LandingActivity" />
        <activity android:name=".feature.landing.signup.SignUpActivity" />
        <activity android:name=".feature.landing.LoginActivity" />
        <activity android:name=".feature.landing.signup.RegisterUserInfoActivity" />

        <activity
            android:name=".feature.home.addproperty.AddPropertyActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".feature.home.portfolio.details.PortfolioDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".feature.marketplaceview.filterview.PropertyFilterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible"/>

        <activity
            android:name=".feature.home.editproperty.EditPropertyActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".feature.landing.ForgotPasswordActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".feature.home.more.SettingsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".permission.PermissionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBNUDd-PUuMzF68Wqcdbr9uNghPScnEXt4"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="27bdc3cd5a4f0eb2353f5b7a78c9b6907c6f0cdb" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="@string/provider_authorities"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths"/>
        </provider>

    </application>

</manifest>